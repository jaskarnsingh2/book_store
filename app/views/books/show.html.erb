<div class="container my-5">
  <div class="row">
    <!-- Book Image -->
    <div class="col-md-6">
      <% if @book.image.attached? %>
        <%= image_tag @book.image, class: "img-fluid rounded" %>
      <% else %>
        <%= image_tag "book_cover.jpg", class: "img-fluid rounded" %>
      <% end %>
    </div>

    <!-- Book Details -->
    <div class="col-md-6">
      <h1><%= @book.title %></h1>
      <p><strong>Author:</strong> <%= @book.author.name %></p>
      <p><strong>Genre:</strong> <%= @book.genre %></p>
      <p><strong>Price:</strong> $<%= @book.price %></p>
      <p><strong>Description:</strong> <%= @book.description %></p>
      <p><strong>Stock:</strong> <%= @book.stock || "Out of Stock" %></p>

      <!-- Add to Cart Button -->
      <%= link_to "Add to Cart", add_to_cart_path(book_id: @book.id), 
          method: :post, 
          remote: true, 
          class: 'btn btn-primary btn-lg' %>

      <!-- Back to Shop -->
      <div class="mt-3">
        <%= link_to "Back to Shop", books_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

  <!-- Additional Book Info (Optional) -->
  <div class="row mt-5">
    <div class="col-12">
      <h2>Additional Information</h2>
      <p><strong>Published Date:</strong> <%= @book.created_at.strftime("%B %d, %Y") %></p>
      <p><strong>Last Updated:</strong> <%= @book.updated_at.strftime("%B %d, %Y") %></p>
    </div>
  </div>
</div>
